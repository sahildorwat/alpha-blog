<div class="container">
<ul>
    <% if @article.errors.any? %>
        <h2> Follwing errors are in the form : </h2>
        <% @article.errors.full_messages.each do |error| %>
            <li> <%=error%></li>
        <%end%>
    <%end%>
</ul>
<div class="row">
    <div class="col-xs-12">
      <%= form_for( @article , :html => { class: "form-horizontal", role: "form" } ) do |f|     %>
        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label"><%=f.label :Title %></label>
            <div class="col-sm-10">
                 <%= f.text_field :title , class: "form-control"%>
            </div>
        </div>

        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label"><%=f.label :description %></label>
            <div class="col-sm-10">
                <%= f.text_area :description , rows: 10 ,class: "form-control"%>
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <%=f.submit  class: "btn btn-submit btn-lg"%>
            </div>
        </div>
    </div>
</div>

<%end%>

    <div class="col-xs-offset-4 col-xs-4">
         <%= link_to 'Back to articles', articles_path%>
    </div>
</div>