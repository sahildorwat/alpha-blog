<h1 class="center"> Create new Categories </h1>
<div>
    <%= render 'shared/errors', obj: @category %>
</div>
<div class="row">
    <div class="col-xs-12">
      <%= form_for( @category , :html => { class: "form-horizontal", role: "form" } ) do |f|     %>
        <div class="form-group">
            <label  class="col-sm-2 control-label"><%=f.label :name %></label>
            <div class="col-sm-10">
                 <%= f.text_field :name , class: "form-control"%>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <%=f.submit  class: "btn btn-submit btn-lg" %>
            </div>
        </div>
    </div>
</div>
<%end%>
