<h1 class="center">Login Form </h1>

<div class="row">
    <div class="col-xs-12">
      <%= form_for( :session , :html => { class: "form-horizontal", role: "form" }, url: login_path ) do |f|     %>
        <div class="form-group">
            <label  class="col-sm-2 control-label"><%=f.label :email %></label>
            <div class="col-sm-10">
                 <%= f.email_field :email , class: "form-control"%>
            </div>
        </div>

        <div class="form-group">
            <label  class="col-sm-2 control-label"><%=f.label :password %></label>
            <div class="col-sm-10">
                <%= f.password_field :password ,class: "form-control"%>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <%= f.submit("Log in", class: "btn btn-submit btn-lg") %>
            </div>
        </div>
    </div>
</div>
<%end%>