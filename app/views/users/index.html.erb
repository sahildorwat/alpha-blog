<h1 class="center" > Listing all the alpha bloggers </h1>
<div class="center">
    <%= will_paginate%>
</div>

<% @users.each do |user| %>
<div class= "center">
    <div class="listings">
        <div= "row">
            <ul class="well col-xs-4 col-xs-offset-4">
                <li><%= link_to gravtar_for(user, 90), user_path(user) %></li>
                <li class="article-title"><%= link_to user.username, user_path(user)  %> </li>
                <li> <small> <%= pluralize(user.articles.count, "article") if user.articles %>    
                <li class="article-title">
                    <% if logged_in? && current_user.admin? %>
                        <%= link_to "delete this user", user_path(user) , method: :delete, data: 
                            { confirm: "are you sure you want to delete this user?"} %> </li>
                    <%end%>
            <ul> 
        </div>
    </div>
</div>
<% end %>
<div class="center">
    <%= will_paginate%>
</div>